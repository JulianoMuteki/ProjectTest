@model IEnumerable<PokemonGOWeb.Models.PokemonViewModel> 
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Imagem</th>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Capturado</th>
            <th>Excluir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var poker in Model)
        {
            <tr>
                <td>@poker.Id</td>
                <td><img src="@poker.ImagePath" style="max-height: 30px;" /></td>
                <td>@poker.Name</td>
                <td>@poker.PokemonType.Description</td>
                <td><span class="glyphicon @(poker.CurrentHave ? "glyphicon-check" : "glyphicon-unchecked")" data-id="@poker.Id" style="cursor:pointer;"></span></td>
                <td><span class="glyphicon glyphicon-remove" onclick="location.href='@Url.Action("Delete", "Pokemon", new { id = poker.Id })';return true;" style="cursor:pointer;"></span></td>
            </tr>
        }
